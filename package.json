{
  "name": "express-hero",
  "version": "0.0.1",
  "description": "A starter configuration for front and back node projects in one file package.json",
  "author": "Adrien Valcke <a.valcke@free.fr>",
  "config": {
    "aVariable": "in npm-package-congif-aVariable"
  },
  "scripts": {
    "start": "NODE_ENV=production node --optimize_for_size --max_old_space_size=128 --gc_interval=100 ./bin/www",
    "start:prod": "DENVAR=production node --trace-sync-io ./bin/www",
    "start:dev": "DENVAR=development node ./bin/www",
    "dev": "parallelshell 'npm run live-reload' 'npm run start:dev' 'npm run watch'",
    "deploy:prod": "npm run security:check && npm run test && npm run version:patch && npm run push:prod && npm run open:prod",
    "postdeploy:prod": "denvar --export-heroku production production && heroku ps:scale web=1",
    "deploy:stage": "npm run test && npm run push:stage && npm run open:stage",
    "security:check": "nsp check -s",
    "version:patch": "npm version patch",
    "push:prod": "npm run push:git && npm run push:prod:heroku",
    "push:stage": "npm run push:git && npm run push:stage:heroku",
    "push:git": "git push origin master",
    "push:prod:heroku": "git push production master",
    "push:stage:heroku": "git push stage master",
    "open:prod": "heroku open --remote production",
    "open:stage": "heroku open --remote stage",
    "clean": "rimraf public/css/* && rimraf public/js/* && rimraf public/img/*",
    "lint": "jshint src/js/*.js",
    "pretest": "npm run lint -s",
    "test": "mocha test/",
    "sass": "node-sass --output-style compressed src/sass/app.scss public/css/app.css",
    "autoprefixer": "postcss -u autoprefixer -b 'last 2 versions' -r public/css/app.css",
    "prebuild": "npm run clean",
    "build": "npm run build:css && npm run build:js",
    "build:css": "npm run sass && npm run autoprefixer",
    "build:js": "browserify -e src/js/app.js -d | uglifyjs > public/js/app.js",
    "watch": "parallelshell 'npm run watch:test' 'npm run watch:build'",
    "watch:test": "npm run test -- -w",
    "watch:build": "parallelshell 'npm run watch:css' 'npm run watch:js'",
    "watch:css": "watch 'npm run build:css' src/sass/",
    "watch:js": "watch 'npm run build:js' src/js/",
    "live-reload": "live-reload --port 9091 public/",
    "env:dev": "`cat .npmrc`",
    "env:prod": "`cat .prod` #utiliser cash crossplatform pour cat",
    "hello": "node-sass --output-style compressed src/sass/app.scss public/css/app.css"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AdVg/express-hero.git"
  },
  "keywords": [
    "express",
    "hero",
    "npm",
    "node",
    "build",
    "heroku",
    "deploy",
    "ci",
    "continuous",
    "drawings"
  ],
  "dependencies": {
    "body-parser": "~1.13.2",
    "compression": "~1.6.2",
    "connect-mongodb-session": "~1.1.1",
    "csurf": "~1.9.0",
    "debug": "~2.2.0",
    "denvar": "~0.1.0",
    "express": "~4.13.1",
    "express-session": "~1.13.0",
    "helmet": "~2.0.0",
    "method-override": "~2.3.5",
    "mongoose": "~4.4.19",
    "morgan": "~1.6.1",
    "pug": "~2.0.0-alpha7",
    "serve-favicon": "~2.3.0",
    "url-back": "~0.1.2",
    "xss-filters": "~1.2.6"
  },
  "devDependencies": {
    "autoprefixer": "~6.3.6",
    "browserify": "~13.0.0",
    "jshint": "~2.9.2",
    "live-reload": "~1.1.0",
    "mocha": "~2.4.5",
    "node-sass": "~3.7.0",
    "nsp": "~2.3.3",
    "parallelshell": "~2.0.0",
    "postcss-cli": "~2.5.2",
    "rimraf": "~2.5.2",
    "uglify-js": "~2.6.2",
    "watch": "~0.18.0"
  },
  "preferGlobal": false,
  "private": true,
  "analyze": false,
  "license": "MIT",
  "engines": {
    "node": "5.7.1"
  }
}
